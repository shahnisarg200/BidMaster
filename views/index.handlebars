{{#each ideas}}
<div class="allAds d-inline-block">
  <div class="card cardLayout" style="width: 18rem" ; "border-radius: 15px">
      <div class="card-header text-center">{{Category}}</div>

    <img class="card-img-top" src="{{image}}">
    <div class="card-body">
      <h3 class="card-title" id="card-title">{{title}}</h3>
      <h4 class="card-text" id="card-text"><span class="glyphicon glyphicon-map-marker"></span>Location:{{city}}</h4>
      <h3 class="card-text" id="card-price">Rs {{price}}</h3>

      <a class="btn btn-primary btn-block mb-2" href="/addView/{{id}}">BUY</a>
      <a class="btn btn-danger btn-block mb-2" href="/favorite">Add To Fav</a>

    </div>
  </div>
</div>
{{else}}


<p>No video ideas listed</p>
{{/each}}